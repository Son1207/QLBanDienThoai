@model IEnumerable<WatchStore.Models.MProduct>
<style>
	* {
		-webkit-box-sizing: border-box;
		-moz-box-sizing: border-box;
		box-sizing: border-box;
	}

	.buttons {
		margin: 10%;
		text-align: center;
	}

	.btn-hover {
		width: 140px;
		font-size: 16px;
		font-weight: 600;
		color: #fff;
		cursor: pointer;
		margin: 20px;
		height: 50px;
		text-align: center;
		border: none;
		background-size: 300% 100%;
		border-radius: 30px;
		moz-transition: all .4s ease-in-out;
		-o-transition: all .4s ease-in-out;
		-webkit-transition: all .4s ease-in-out;
		transition: all .4s ease-in-out;
	}

		.btn-hover:hover {
			background-position: 100% 0;
			moz-transition: all .4s ease-in-out;
			-o-transition: all .4s ease-in-out;
			-webkit-transition: all .4s ease-in-out;
			transition: all .4s ease-in-out;
		}

		.btn-hover:focus {
			outline: none;
		}

		.btn-hover.color-2 {
			background-image: linear-gradient(to right, #f5ce62, #e43603, #fa7199, #e85a19);
			box-shadow: 0 4px 15px 0 rgba(229, 66, 10, 0.75);
		}
</style>
<div class="single-left-sidebar sidebar-best-seller">
	<div class="left-title-area">
		<h2 class="left-title">Sản phẩm mới</h2>
	</div>
	<div class="row">
		<div class="sidebar-best-seller-carousel">
			<div class="product-block">
				<ul>
					@foreach (var item in Model)
					{
						if (@item.Discount != 0)
						{
							<li>
								<div class='product'>
									<div class='pic-news'>
										<a href='~/@item.Slug'>
											<img src="~/Public/library/product/@item.Image" alt="@item.Name" />
										</a>
									</div>

									<h3>
										<a href='~/@item.Slug'>@item.Name</a>
									</h3>
									<div class='price-box'>
										@if (@item.Discount == 1)
										{
											<span class="price">@String.Format("{0:0,0₫}", @item.ProPrice)</span>
											<br />
											<span class="old-price">@String.Format("{0:0,0₫}", @item.Price)</span>


										}
										else
										{
											<span class="price">@String.Format("{0:0,0₫}", @item.ProPrice)</span>
										}


									</div>
									<div>
										@for (int i = 1; i <= 5; i++)
										{
											if (i <= item.ProRate)
											{
												<span class="fa fa-star checked"></span>
											}
											else
											{
												<span class="fa fa-star"></span>
											}
										}
									</div>
									<div class='btn-hover color-2'style="margin-top:15px;padding-top:15px">

										<a href='~/@item.Slug'>Xem sản phẩm</a>
									</div>
								</div>
							</li>
						}
						else
						{

						}


					}

				</ul>

